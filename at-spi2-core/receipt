# SliTaz package receipt.

PACKAGE="at-spi-core"
VERSION="2.12.0"
CATEGORY="Accessibility toolkit."
LICENSE="GPL3"
SHORT_DESC="GNOME Desktop API."
MAINTAINER="yuripourre@gmail.com"
TARBALL="$PACKAGE-$VERSION.tar.xz"
WEB_SITE="https://wiki.gnome.org/Apps/Calculator"
WGET_URL="http://ftp.gnome.org/pub/gnome/sources/$PACKAGE/${VERSION%.*}/$TARBALL"

DEPENDS="dbus glib gobject-introspection"
BUILD_DEPENDS="dbus-dev glib-dev gobject-ins gobject-introspection-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules()
{
	cp -a $install/usr $fs
}
