# SliTaz package receipt.

PACKAGE="eom"
VERSION="1.8.0"
CATEGORY="utilities"
LICENSE="GPL3"
SHORT_DESC="MATE's default icon set."
MAINTAINER="yuripourre@gmail.com"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.mate-desktop.org/"
WGET_URL="https://github.com/mate-desktop/$PACKAGE/archive/$TARBALL"

DEPENDS="gtk+ mate-desktop dconf jpeg shared-mime-info pygtk"
BUILD_DEPENDS="wget autoconf automake libtool itstool mate-desktop \
gtk-doc gtk+-dev yelp-tools mate-icon-theme shared-mime-info-dev \
jpeg-dev"

# Rules to configure and make the package.
compile_rules()
{
	./autogen.sh                   \
		--prefix=/usr          \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr $fs
}
