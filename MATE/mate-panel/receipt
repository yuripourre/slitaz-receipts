# SliTaz package receipt.

PACKAGE="mate-panel"
VERSION="1.9.0"
CATEGORY="utilities"
LICENSE="GPL3"
SHORT_DESC="Panel where you can run applications and applets using MATE."
MAINTAINER="yuripourre@gmail.com"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.mate-desktop.org/"
WGET_URL="https://github.com/mate-desktop/$PACKAGE/archive/$TARBALL"

DEPENDS="gtk+ dconf"
BUILD_DEPENDS="wget dconf-dev gtk+-dev autoconf automake libtool itstool \
mate-common-dev mate-desktop-dev mate-menus-dev yelp-tools dbus-glib-dev \ 
gobject-introspection-dev gtk-doc libcanberra-dev libwnck-dev librsvg-dev"

# Rules to configure and make the package.
compile_rules()
{
	./autogen.sh                   \
		--prefix=/usr          \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr $fs
}
