# SliTaz package receipt.

PACKAGE="mate-screensaver"
VERSION="1.9.0"
CATEGORY="utilities"
LICENSE="GPL3"
SHORT_DESC="Screensaver for MATE."
MAINTAINER="yuripourre@gmail.com"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.mate-desktop.org/"
WGET_URL="https://github.com/mate-desktop/$PACKAGE/archive/$TARBALL"
TAGS="MATE"

DEPENDS=""
BUILD_DEPENDS="wget cacerts autoconf automake libtool itstool\
mate-common-dev mate-desktop-dev dbus-glib-dev dconf-dev gtk+-dev \
xorg-libXScrnSaver-dev"

# Rules to configure and make the package.
compile_rules()
{
	./autogen.sh                   \
		--prefix=/usr          \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr $fs
}
