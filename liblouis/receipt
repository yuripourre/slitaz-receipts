# SliTaz package receipt.

PACKAGE="liblouis"
VERSION="2.5.2-3"
CATEGORY="acessibility"
LICENSE="GPL3"
SHORT_DESC="Open-source braille translator and back-translator."
MAINTAINER="yuripourre@gmail.com"
TARBALL="$PACKAGE-${VERSION%.*}.tar.gz"
WEB_SITE="https://code.google.com/p/liblouis/"
WGET_URL="http://liblouis.googlecode.com/files/$TARBALL"

DEPENDS="glibc"
BUILD_DEPENDS="help2man python-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd python
	LD_PRELOAD+=":$src/$PACKAGE-${VERSION%.*}/liblouis/.libs/liblouis.so"
	python2 setup.py install --root="$install" --prefix="/usr" --optimize=1
	python setup.py install --root="$install" --prefix="/usr" --optimize=1
}

genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr $fs
}
